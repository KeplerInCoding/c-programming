//IDENTITY MATRIX

#include <stdio.h>
void main()
{
    int i,j,n,count=0;
    printf("enter the index n:");
    scanf("%d",&n);
    int a[n][n];
    
    for(i=0;i<n;i++)
    {
        printf("enter elements for %d row:",i);
        printf("\n");
        printf("\n");
        for(j=0;j<n;j++)
        {
            printf("enter elements for %d column:",j);
            scanf("%d",&a[i][j]);
        }
        printf("\n");
    }
    
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(i==j)
            {
                if(a[i][i]!=1)
                {
                    printf("not identity matrix");
                    ++count;
                    break;
                }
            }
            else
            {
                if(a[i][j]!=0)
                {
                    printf("not identity matrix");
                    ++count;
                    break;
                }
            }
        }
        if(count!=0)
        {
            break;
        }
        
        printf("\n");
    }
    if(count==0)
    {
        printf("this is identity matrix");
    }
    printf("\n");
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            
            printf("%d ",a[i][j]);
        }
        printf("\n");
    }
    
}













//SUM OF TWO 2D MATRIX

#include <stdio.h>
void display(int a[2][3]);
int sum(int a[2][3],int b[2][3]);
void main()
{
    int a[2][3],b[2][3];
    int i,j,c;
    
    for(i=0;i<2;i++)
    {
        printf("enter elements for %d row:",i);
        printf("\n");
        printf("\n");
        for(j=0;j<3;j++)
        {
            printf("enter elements for %d column:",j);
            scanf("%d",&a[i][j]);
        }
        printf("\n");
    }
    for(i=0;i<2;i++)
    {
        printf("enter elements for %d row:",i);
        printf("\n");
        printf("\n");
        for(j=0;j<3;j++)
        {
            printf("enter elements for %d column:",j);
            scanf("%d",&b[i][j]);
        }
        printf("\n");
    }
    c = sum(a,b);
    printf("the matrix a is: ");
    display(a);
    
    printf("the matrix b is: ");
    display(b);
    
    printf("the matrix c is: ");
    display(c);
}

void display(int a[2][3])
{
    int i,j;
    
    for(i=0;i<2;i++)
    {
        for(j=0;j<3;j++)
        {
            
            printf("%d ",a[i][j]);
        }
        printf("\n");
    }
    
}

int sum(int a[2][3],int b[2][3])
{
    int s[2][3],i,j,k;
    for(i=0;i<2;i++)
    {
        for(j=0;j<3;j++)
        {
            s[i][j]=a[i][j]+b[i][j];
        }
    }
    return s;
    
}











//FREQUENCY OF ELEMENTS OF 1-D ARRAY. //not working properly

#include <stdio.h>
void main()
{
    int i,j,n,count;
    int visited= -1;
    printf("enter the index n:");
    scanf("%d",&n);
    int a[n];
    int f[n];
    printf("enter elements for array:");
    
    
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }

    
    for(i=0;i<n;i++)
    {
        count=1;
        for(j=i+1;j<n;j++)
        {
            if(a[i]==a[j])
            {
                count++;
                f[j]= visited;
            }
        }
        if(f[i]!=visited)
        {
            f[i]=count;
        }
    }
    for(i=0;i<n;i++)
    {
        printf("%d",f[i]);
    }
    printf("\n---------------------\n");    
    printf(" Element | Frequency\n");    
    printf("---------------------\n");    
    for(i=0;i<n;i++)
    {    
        if(f[i]!=visited)
        {    
            printf("    %d", a[i]);    
            printf("    |  ");    
            printf("  %d\n", f[i]);    
        }    
    }    
    printf("---------------------\n");

}









//MIN, MAX, 2nd MAX

#include <stdio.h>
void main()
{
    int i,j,n,min, max, max2;
    printf("enter the index n:");
    scanf("%d",&n);
    int a[n];
    
    printf("enter elements for array:");
    
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }

    min = max = max2 = a[0];

    for(i=1;i<n;i++)
    {
        if(a[i]>max)
        {
            max=a[i];
        }
        if(a[i]<min)
        {
            min=a[i];
        }
    
    }
    
    for(i=1;i<n;i++)
    {
        if(a[i]>max2 && a[i]!=max)
        {
            max2=a[i];
        }
    }
    printf("\nmin= %d \n max= %d \n second max= %d",min,max,max2);
}  










//MULTIPLICATION OF TWO 2D MATRIX

#include <stdio.h>
void main()
{
    int i,j,k,r,m,n;

    printf("enter the no. of row and column for matrix A:");
    scanf("%d %d",&m,&n);
    printf("enter the no. of column for matrix B:");
    scanf("%d",&r);
    int a[m][n];
    int b[n][r];
    int c[m][r];

    printf("enter the elements for matrix A:\n");
    
    for(i=0;i<m;i++)
    {
        printf("enter elements for %d row:",i);
        printf("\n");
        printf("\n");
        for(j=0;j<n;j++)
        {
            printf("enter elements for %d column:",j);
            scanf("%d",&a[i][j]);
        }
        printf("\n");
    }

    printf("enter the elements for matrix B:\n");

    for(i=0;i<n;i++)
    {
        printf("enter elements for %d row:",i);
        printf("\n");
        printf("\n");
        for(j=0;j<r;j++)
        {
            printf("enter elements for %d column:",j);
            scanf("%d",&b[i][j]);
        }
        printf("\n");
    }

    for(i=0;i<m;i++)
    {
        for(j=0;j<r;j++)
        {
            c[i][j]=0;
            for(k=0;k<n;k++)
            {
                c[i][j]+= a[i][k]*b[k][j];
            }

        }
    }
    printf("the product matrix is:\n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<r;j++)
        {
            printf("%d ",c[i][j]);
        }
        printf("\n");
    }
}
