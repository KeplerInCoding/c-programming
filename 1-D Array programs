#include <stdio.h>
void display(int a[2][3]);
int sum(int a[2][3]);
void main()
{
    int a[2][3];
    int i,j;
    
    for(i=0;i<2;i++)
    {
        printf("enter elements for %d row:",i);
        printf("\n");
        printf("\n");
        for(j=0;j<3;j++)
        {
            printf("enter elements for %d column:",j);
            scanf("%d",&a[i][j]);
        }
        printf("\n");
    }
    display(a);
    printf("the sum is: %d", sum(a));
}

void display(int a[2][3])
{
    int i,j;
    
    for(i=0;i<2;i++)
    {
        for(j=0;j<3;j++)
        {
            
            printf("%d ",a[i][j]);
        }
        printf("\n");
    }
    
}

int sum(int a[2][3])
{
    int s=0,i,j;
    for(i=0;i<2;i++)
    {
        for(j=0;j<3;j++)
        {
            s+=a[i][j];
        }
    }
    return s;
}
